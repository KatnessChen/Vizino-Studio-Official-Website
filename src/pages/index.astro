---
import Layout from '../layouts/Layout.astro';
import DashboardIcon from '@mui/icons-material/Dashboard';
import PaletteSharpIcon from '@mui/icons-material/PaletteSharp';
import DescriptionIcon from '@mui/icons-material/Description';
import AutoFixHighIcon from '@mui/icons-material/AutoFixHigh';
import AutoAwesomeSharpIcon from '@mui/icons-material/AutoAwesomeSharp';
import SavingsIcon from '@mui/icons-material/Savings';
import DesignServicesIcon from '@mui/icons-material/DesignServices';
import HomeIcon from '@mui/icons-material/Home';
import EmojiObjectsSharpIcon from '@mui/icons-material/EmojiObjectsSharp';
import ArchitectureSharpIcon from '@mui/icons-material/ArchitectureSharp';

const BETA_CREDITS_VALUE = 50;
---

<Layout 
  title="Vizino AI - Precise AI Design for Interior Visualization" 
  description="Unlock creative precision with prompt-based AI. Vizino AI delivers precise, project-based interior design visualization with custom materials, reusable prompts, and the powerful Nano Banana AI model."
>
  <!-- Hero Section -->
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <div class="hero-badge">Precise AI Design</div>
        <h1>Achieve Precision in AI-Powered Interior Design</h1>
        <p class="hero-subtitle">Vizino AI delivers <strong>precision and creative control</strong> through project-based workflows, custom material libraries, and purpose-built AI for interior design. Master prompt-based design for professional-quality visualizations.</p>
        <div class="cta-buttons">
          <a href="/beta-request" class="btn btn-primary">Join Beta - Get ${BETA_CREDITS_VALUE} CAD Credits</a>
          <a href="#how-it-works" class="btn btn-secondary">See How It Works</a>
        </div>
      </div>
      <div class="hero-visual">
        <div class="preview-mockup">
          <div class="mockup-header">
            <div class="mockup-tabs">
              <span class="tab active" data-tab="0">Recolor Wall</span>
              <span class="tab" data-tab="1">Add Texture</span>
              <span class="tab" data-tab="2">Add Furniture</span>
            </div>
          </div>
          <div class="mockup-content">
            <div class="carousel" aria-roledescription="carousel">
              <div class="carousel-track">
                <div class="carousel-item">
                  <img src="/images/recolor-wall-marketing.png" alt="Recolor Wall feature" />
                </div>
                <div class="carousel-item">
                  <img src="/images/add-texture-marketing.png" alt="Add Texture feature" />
                </div>
                <div class="carousel-item">
                  <img src="/images/add-furniture-marketing.png" alt="Add Furniture feature" />
                </div>
              </div>

              <button class="carousel-btn prev" aria-label="Previous slide">‹</button>
              <button class="carousel-btn next" aria-label="Next slide">›</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

    <!-- Comparison Section -->
  <section class="comparison-section">
    <div class="container">
      <div class="section-header">
        <h2>Vizino AI vs. Generic AI Chat Tools</h2>
        <p>See the difference precision makes</p>
      </div>
      <div class="comparison-table">
        <div class="comparison-header">
          <div class="comparison-feature"></div>
          <div class="comparison-column">
            <div class="column-label generic">Generic AI Chat</div>
          </div>
          <div class="comparison-column">
            <div class="column-label vizino">Vizino AI</div>
          </div>
        </div>
        
        <div class="comparison-row">
          <div class="comparison-feature">Project Organization</div>
          <div class="comparison-column">
            <span class="no">❌ Lost in chat history</span>
          </div>
          <div class="comparison-column">
            <span class="yes">✓ Structured projects & spaces</span>
          </div>
        </div>
        
        <div class="comparison-row">
          <div class="comparison-feature">Custom Materials</div>
          <div class="comparison-column">
            <span class="no">❌ Scattered materials, difficult to manage</span>
          </div>
          <div class="comparison-column">
            <span class="yes">✓ Project-based materials library</span>
          </div>
        </div>

        <div class="comparison-row">
          <div class="comparison-feature">Writing Prompt</div>
          <div class="comparison-column">
            <span class="no">❌ Figure it out yourself, no guidance</span>
          </div>
          <div class="comparison-column">
            <span class="yes">✓ "Help Me Write" for optimized prompts</span>
          </div>
        </div>
        
        <div class="comparison-row">
          <div class="comparison-feature">Prompt Management</div>
          <div class="comparison-column">
            <span class="no">❌ Start from scratch each time</span>
          </div>
          <div class="comparison-column">
            <span class="yes">✓ Save, organize, & reuse prompts</span>
          </div>
        </div>
        
        <div class="comparison-row">
          <div class="comparison-feature">Version History</div>
          <div class="comparison-column">
            <span class="no">❌ Undo loses versions, no recovery</span>
          </div>
          <div class="comparison-column">
            <span class="yes">✓ Complete version history, redo from any version</span>
          </div>
        </div>
        
        <div class="comparison-row">
          <div class="comparison-feature">Results Comparison & Sharing</div>
          <div class="comparison-column">
            <span class="no">❌ No side-by-side comparison, manual sharing</span>
          </div>
          <div class="comparison-column">
            <span class="yes">✓ Compare multiple results, one-click sharing</span>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Section -->
  <section class="solution-section">
    <div class="container">
      <div class="solution-intro">
        <div class="solution-badge">Our Solution</div>
        <h2>Precision Through Purpose-Built Design</h2>
        <p>Vizino AI is engineered specifically for interior design visualization—not another generic chat tool</p>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section id="how-it-works" class="how-it-works-section">
    <div class="container">
      <div class="section-header">
        <h2>How Vizino AI Works</h2>
        <p>Four simple steps to precise interior design visualization</p>
      </div>
      <div class="steps-container">
        <div class="step">
          <div class="step-number">01</div>
          <div class="step-content">
            <h3>Create Your Project</h3>
            <p>Start by creating a project (e.g., "Residence Renovation"). Add spaces within the project—living room, kitchen, master bedroom. Everything stays organized and accessible.</p>
          </div>
        </div>
        
        <div class="step">
          <div class="step-number">02</div>
          <div class="step-content">
            <h3>Upload Room Photos & Materials</h3>
            <p>Upload photos of your actual space. Then add custom materials: paint colors, wood textures, tile samples, furniture references, or any visual element you want to incorporate.</p>
          </div>
        </div>
        
        <div class="step">
          <div class="step-number">03</div>
          <div class="step-content">
            <h3>Use Prompt Library or "Help Me Write"</h3>
            <p>Choose from our prompt library or write your own. Stuck? Click "Help Me Write"—our AI analyzes your images and creates an optimized prompt for you. Combine it all with Nano Banana AI.</p>
          </div>
        </div>
        
        <div class="step">
          <div class="step-number">04</div>
          <div class="step-content">
            <h3>Generate, Refine, & Reuse</h3>
            <p>Generate your visualization with precision. Compare variations, iterate quickly, save your favorite prompts, and reuse them across projects. Build your design toolkit over time.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="features-section">
    <div class="container">
      <div class="section-header">
        <h2>Powerful Features Built for Precision</h2>
        <p>Everything you need for professional interior design visualization</p>
      </div>
      <div class="features-grid">
        <!-- Feature 1: Project-Based Management -->
        <div class="feature-card highlight">
          <div class="feature-icon">
            <span class="icon-bg"><DashboardIcon /></span>
          </div>
          <h3>Project & Space Management</h3>
          <p>Organize every design project systematically. Create projects, add multiple spaces (living room, kitchen, bedroom), and keep all your materials, images, and prompts perfectly organized—never lose track again.</p>
          <ul class="feature-list">
            <li>Structured project hierarchies</li>
            <li>Multiple spaces per project</li>
            <li>Easy navigation and retrieval</li>
            <li>No more lost chat history</li>
          </ul>
        </div>

        <!-- Feature 2: Custom Materials Upload -->
        <div class="feature-card highlight">
          <div class="feature-icon">
            <span class="icon-bg"><PaletteSharpIcon /></span>
          </div>
          <h3>Upload Custom Materials</h3>
          <p>Go beyond text descriptions. Upload your actual room photos, reference images, custom paint colors, textures, furniture, and materials. Combine them with your space images for precise, creative results.</p>
          <ul class="feature-list">
            <li>Upload real room photos</li>
            <li>Add custom colors & textures</li>
            <li>Import furniture & décor references</li>
            <li>Mix and match materials freely</li>
          </ul>
        </div>

        <!-- Feature 3: Prompt Library -->
        <div class="feature-card highlight">
          <div class="feature-icon">
            <span class="icon-bg"><DescriptionIcon /></span>
          </div>
          <h3>Prompt Library & Reusability</h3>
          <p>Don't start from scratch every time. Access pre-built prompt templates or create and save your own. Every prompt is stored, labeled, and ready to reuse—building your personal design toolkit over time.</p>
          <ul class="feature-list">
            <li>Pre-built prompt templates</li>
            <li>Save your custom prompts</li>
            <li>Organize by project</li>
            <li>One-click reuse and iteration</li>
          </ul>
        </div>

        <!-- Feature 4: AI-Powered "Help Me Write" -->
        <div class="feature-card highlight">
          <div class="feature-icon">
            <span class="icon-bg"><AutoFixHighIcon /></span>
          </div>
          <h3>"Help Me Write" AI Assistant</h3>
          <p>Struggling to describe your vision? Our AI assistant analyzes your uploaded images and simple descriptions, then crafts powerful, detailed prompts optimized for the Nano Banana model—ensuring stunning, precise outcomes.</p>
          <ul class="feature-list">
            <li>AI analyzes your images & input</li>
            <li>Generates advanced prompts for you</li>
            <li>Optimized for Nano Banana model</li>
            <li>Learn prompt engineering effortlessly</li>
          </ul>
        </div>

        <!-- Feature 5: Nano Banana Model -->
        <div class="feature-card highlight">
          <div class="feature-icon">
            <span class="icon-bg"><AutoAwesomeSharpIcon /></span>
          </div>
          <h3>Nano Banana AI Model</h3>
          <p>Powered by the world's most advanced reasoning model—Nano Banana—for unparalleled accuracy, detail, and realism in interior design visualization. Precision you can trust.</p>
          <ul class="feature-list">
            <li>Cutting-edge reasoning capabilities</li>
            <li>Superior detail & realism</li>
            <li>Precision-driven creative output</li>
            <li>Optimized for interior design</li>
          </ul>
        </div>

        <!-- Feature 6: Save Time & Money -->
        <div class="feature-card highlight">
          <div class="feature-icon">
            <span class="icon-bg"><SavingsIcon /></span>
          </div>
          <h3>Save Time & Money</h3>
          <p>Make confident decisions before buying paint or materials. Eliminate costly mistakes, reduce endless iterations, and speed up your entire design process.</p>
          <ul class="feature-list">
            <li>Preview before purchasing</li>
            <li>Reduce material waste</li>
            <li>Faster client approvals</li>
            <li>Minimize design revisions</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Who Uses Vizino Studio Section -->
  <section class="who-uses-section">
    <div class="container">
      <div class="section-header">
        <h2>Who We're Looking For</h2>
        <p>Join our beta program if you're a design professional or homeowner seeking precision</p>
      </div>
      <div class="who-uses-grid">
        <div class="who-card">
          <div class="who-icon">
            <span class="icon-container"><DesignServicesIcon /></span>
          </div>
          <h3>Interior Designers</h3>
          <p>Deliver precise visualizations to clients without the back-and-forth of generic AI tools. Master prompts for creative precision.</p>
        </div>

        <div class="who-card">
          <div class="who-icon">
            <span class="icon-container"><ArchitectureSharpIcon /></span>
          </div>
          <h3>Architects</h3>
          <p>Explore material combinations and interior finishes with precision during project planning and client presentations.</p>
        </div>

        <div class="who-card">
          <div class="who-icon">
            <span class="icon-container"><EmojiObjectsSharpIcon /></span>
          </div>
          <h3>Homeowners & DIY Enthusiasts</h3>
          <p>Visualize your dream home improvements accurately before making expensive purchases or commitments.</p>
        </div>

        <div class="who-card">
          <div class="who-icon">
            <span class="icon-container"><HomeIcon /></span>
          </div>
          <h3>Real Estate Professionals</h3>
          <p>Create compelling property visualizations with precision and creative flair that stands out in listings.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Beta Program Section -->
  <section id="beta" class="beta-section">
    <div class="container">
      <div class="beta-content">
        <div class="beta-badge">Limited Beta Program</div>
        <h2>Ready for Precision AI Design?</h2>
        <p>We're seeking anyone who value precision in design visualization. Join our exclusive beta and help shape the product.</p>
        
        <div class="beta-benefits">
          <div class="benefit">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17Z" fill="#ffffff"/>
            </svg>
            <span><strong>~${BETA_CREDITS_VALUE} CAD in V Points</strong> — Generous credits for all beta participants to explore the platform</span>
          </div>
          <div class="benefit">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17Z" fill="#ffffff"/>
            </svg>
            <span><strong>Direct Input</strong> — Your feedback shapes the future of the product</span>
          </div>
          <div class="benefit">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17Z" fill="#ffffff"/>
            </svg>
            <span><strong>Priority Support</strong> — Direct access to our team during the beta phase</span>
          </div>
        </div>
        <a href="/beta-request" class="btn btn-primary btn-large">Get Access</a>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    padding: var(--spacing-4xl) 0;
    background: linear-gradient(135deg, var(--brand-violet-light) 0%, var(--color-gray-50) 100%);
  }

  .hero-section .container {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--spacing-4xl);
    align-items: center;
  }

  .hero-badge {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-lg);
    background: linear-gradient(135deg, var(--brand-indigo) 0%, var(--brand-violet) 100%);
    color: var(--color-white);
    border-radius: var(--radius-xl);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-lg);
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .hero-content h1 {
    margin-bottom: var(--spacing-lg);
    line-height: var(--line-height-tight);
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-gray-700);
    margin-bottom: var(--spacing-2xl);
    line-height: var(--line-height-relaxed);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-lg);
    flex-wrap: wrap;
    margin-bottom: var(--spacing-lg);
  }

  .hero-note {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
  }

  /* Preview Mockup */
  .preview-mockup {
    background-color: var(--color-white);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-xl);
    overflow: hidden;
  }

  .mockup-header {
    background-color: var(--color-gray-100);
    padding: var(--spacing-md);
    border-bottom: 1px solid var(--color-gray-200);
  }

  .mockup-tabs {
    display: flex;
    gap: var(--spacing-sm);
  }

  .tab {
    padding: var(--spacing-sm) var(--spacing-md);
    background-color: var(--color-white);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    color: var(--color-gray-600);
    font-weight: var(--font-weight-medium);
  }

  .tab.active {
    background-color: var(--brand-indigo);
    color: var(--color-white);
  }

  .mockup-content {
    padding: var(--spacing-md);
    background-color: var(--color-gray-50);
  }

  .carousel {
    position: relative;
    overflow: hidden;
    border-radius: var(--radius-lg);
  }

  .carousel-track {
    display: flex;
    transition: transform 400ms cubic-bezier(0.4,0,0.2,1);
    will-change: transform;
  }

  .carousel-item {
    min-width: 100%;
    aspect-ratio: 1;
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-sm);
    background-size: cover;
    background-position: center;
    overflow: hidden;
  }

  .carousel-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .carousel-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255,255,255,0.95);
    border: none;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    font-size: 20px;
    color: var(--brand-indigo);
    box-shadow: var(--shadow-sm);
  }

  .carousel-btn.prev { left: 8px; }
  .carousel-btn.next { right: 8px; }

  .carousel-dots {
    display: flex;
    gap: 8px;
    justify-content: center;
    margin-top: var(--spacing-md);
  }

  .carousel-dots .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(255,255,255,0.45);
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .carousel-dots .dot.active {
    background: var(--color-white);
    box-shadow: 0 0 0 4px rgba(255,255,255,0.08);
  }

  /* Problem Section */
  .problem-section {
    padding: var(--spacing-4xl) 0;
    background-color: var(--color-white);
  }

  .problems-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
    gap: var(--spacing-2xl);
  }

  .problem-card {
    padding: var(--spacing-2xl);
    background-color: #fef2f2;
    border-radius: var(--radius-xl);
    border: 2px solid #fca5a5;
  }

  .problem-icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--spacing-md);
  }

  .problem-card h3 {
    margin-bottom: var(--spacing-md);
    color: #991b1b;
  }

  .problem-card p {
    color: #7f1d1d;
    line-height: var(--line-height-relaxed);
    font-size: var(--font-size-sm);
  }

  /* Solution Section */
  .solution-section {
    padding: var(--spacing-3xl) 0;
    background: linear-gradient(135deg, var(--brand-indigo) 0%, var(--brand-violet) 100%);
    color: var(--color-white);
  }

  .solution-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .solution-badge {
    display: inline-block;
    padding: var(--spacing-sm) var(--spacing-lg);
    background-color: rgba(255, 255, 255, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.3);
    color: var(--color-white);
    border-radius: var(--radius-xl);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-lg);
    letter-spacing: 0.5px;
    text-transform: uppercase;
  }

  .solution-intro h2 {
    color: var(--color-white);
    margin-bottom: var(--spacing-md);
  }

  .solution-intro p {
    font-size: var(--font-size-xl);
    color: rgba(255, 255, 255, 0.95);
    line-height: var(--line-height-relaxed);
  }

  /* Section Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-2xl);
  }

  .section-header h2 {
    margin-bottom: var(--spacing-md);
  }

  .section-header p {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Features Section */
  .features-section {
    padding: var(--spacing-xl) 0 var(--spacing-4xl) 0;
    background-color: var(--color-gray-50);
  }

  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: var(--spacing-2xl);
  }

  .feature-card {
    padding: var(--spacing-2xl);
    background-color: var(--color-white);
    border-radius: var(--radius-xl);
    border: 2px solid var(--color-gray-200);
    transition: all var(--transition-base);
  }

  .feature-card.highlight {
    border-color: var(--brand-indigo);
    background: linear-gradient(135deg, #ffffff 0%, #f5f3ff 100%);
  }

  .feature-card:hover {
    border-color: var(--brand-indigo);
    box-shadow: var(--shadow-xl);
    transform: translateY(-4px);
  }

  .feature-icon {
    margin-bottom: var(--spacing-lg);
    display: flex;
  }

  .feature-icon .icon-bg {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-lg);
    background: linear-gradient(135deg, #f5f3ff 0%, #e0e7ff 100%);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: var(--brand-indigo);
  }

  .feature-icon .icon-bg svg {
  }

  .feature-card h3 {
    margin-bottom: var(--spacing-md);
  }

  .feature-card > p {
    color: var(--color-gray-600);
    margin-bottom: var(--spacing-lg);
    line-height: var(--line-height-relaxed);
  }

  .feature-list {
    list-style: none;
    padding-left: 0;
  }

  .feature-list li {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
    padding-left: var(--spacing-lg);
    margin-bottom: var(--spacing-sm);
    position: relative;
  }

  .feature-list li:before {
    content: '✓';
    position: absolute;
    left: 0;
    color: var(--brand-indigo);
    font-weight: var(--font-weight-bold);
  }

  /* Who Uses Section */
  .who-uses-section {
    padding: var(--spacing-4xl) 0;
    background-color: var(--color-white);
  }

  .who-uses-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-2xl);
  }

  .who-card {
    padding: var(--spacing-2xl);
    background-color: var(--color-gray-50);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-gray-200);
    transition: all var(--transition-base);
  }

  .who-card:hover {
    border-color: var(--brand-indigo);
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .who-icon {
    margin-bottom: var(--spacing-lg);
    display: flex;
  }

