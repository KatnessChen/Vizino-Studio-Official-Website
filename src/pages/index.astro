<script>
(() => {
  const trackEl = document.querySelector('.carousel-track');
  if (!trackEl) return;
  const track = trackEl as HTMLElement;
  const items = Array.from(track.children) as HTMLElement[];
  const prevEl = document.querySelector('.carousel-btn.prev') as HTMLElement | null;
  const nextEl = document.querySelector('.carousel-btn.next') as HTMLElement | null;
  const dots = Array.from(document.querySelectorAll('.carousel-dots .dot')) as HTMLElement[];
  const tabs = Array.from(document.querySelectorAll('.mockup-tabs .tab')) as HTMLElement[];
  let index = 0;

  function update(i: number) {
    index = (i + items.length) % items.length;
    track.style.transform = `translateX(-${index * 100}%)`;
    dots.forEach((d, idx) => d.classList.toggle('active', idx === index));
    tabs.forEach((t, idx) => t.classList.toggle('active', idx === index));
  }

  prevEl?.addEventListener('click', () => update(index - 1));
  nextEl?.addEventListener('click', () => update(index + 1));
  dots.forEach((d, i) => d.addEventListener('click', () => update(i)));
  tabs.forEach((tab) => {
    tab.addEventListener('click', () => {
      const tabIndex = parseInt(tab.getAttribute('data-tab') || '0', 10);
      update(tabIndex);
    });
  });

  // autoplay
  let timer = setInterval(() => update(index + 1), 3500);
  [prevEl, nextEl, ...dots, ...tabs].filter(Boolean).forEach(el =>
    (el as HTMLElement).addEventListener('click', () => {
      clearInterval(timer);
      timer = setInterval(() => update(index + 1), 3500);
    })
  );

  // keyboard
  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') update(index - 1);
    if (e.key === 'ArrowRight') update(index + 1);
  });
})();
</script>
