---
import Layout from '../layouts/Layout.astro';
---

<Layout 
  title="Contact Us" 
  description="Contact Vizino AI"
>
  <section class="contact-section">
    <div class="contact-container">
      <div class="contact-content">
        <h1>Get in Touch</h1>
        <p class="contact-description">Have questions or feedback? We'd love to hear from you.</p>
        <p class="email-text">
          <a href="mailto:contact@vizino.ai" class="email-link">contact@vizino.ai</a>
        </p>
      </div>
    </div>
  </section>
</Layout>

<style>
  .contact-section {
    padding: var(--spacing-4xl) var(--spacing-md);
    background: linear-gradient(135deg, var(--brand-violet-light) 0%, var(--color-gray-50) 100%);
    min-height: calc(100vh - 200px);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-container {
    max-width: 600px;
    width: 100%;
  }

  .contact-content {
    text-align: center;
  }

  .contact-content h1 {
    margin-bottom: var(--spacing-md);
    color: var(--color-gray-800);
  }

  .contact-description {
    font-size: var(--font-size-lg);
    color: var(--color-gray-600);
    margin-bottom: var(--spacing-xl);
  }

  .contact-box {
    background-color: var(--color-white);
    border: 2px solid var(--brand-indigo);
    border-radius: var(--radius-xl);
    padding: var(--spacing-3xl);
    box-shadow: var(--shadow-lg);
  }

  .contact-box h2 {
    margin-bottom: var(--spacing-2xl);
    color: var(--color-gray-800);
  }

  .email-text {
    margin-bottom: var(--spacing-xl);
  }

  .email-link {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--brand-indigo);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .email-link:hover {
    color: var(--brand-violet);
    text-decoration: underline;
  }

  .response-time {
    font-size: var(--font-size-sm);
    color: var(--color-gray-600);
    margin-top: var(--spacing-lg);
  }
</style>
